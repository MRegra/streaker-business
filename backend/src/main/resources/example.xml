<configuration scan="true" scanPeriod="30 seconds">

    <!-- DEV PROFILE -->
    <springProfile name="dev">

        <!-- Human-friendly console logs -->
        <appender name="CONSOLE_PRETTY" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n%ex</pattern>
            </encoder>
        </appender>

        <!-- JSON logs for local Splunk or Fluent Bit testing -->
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp><fieldName>timestamp</fieldName></timestamp>
                    <logLevel><fieldName>level</fieldName></logLevel>
                    <threadName><fieldName>thread</fieldName></threadName>
                    <loggerName><fieldName>logger</fieldName></loggerName>
                    <message />
                    <mdc />
                    <stackTrace><fieldName>exception</fieldName></stackTrace>
                </providers>
            </encoder>
        </appender>

        <root level="DEBUG">
            <appender-ref ref="CONSOLE_PRETTY" />
            <appender-ref ref="CONSOLE_JSON" />
        </root>
    </springProfile>

    <!-- PROD PROFILE -->
    <springProfile name="prod">
        <!-- Rolling file JSON logs for Fluent Bit + Loki -->
        <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>/app/logs/streaker.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/app/logs/streaker.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp><fieldName>timestamp</fieldName></timestamp>
                    <logLevel><fieldName>level</fieldName></logLevel>
                    <threadName><fieldName>thread</fieldName></threadName>
                    <loggerName><fieldName>logger</fieldName></loggerName>
                    <message />
                    <mdc />
                    <stackTrace><fieldName>exception</fieldName></stackTrace>
                </providers>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="FILE_JSON"/>
        </root>
    </springProfile>

</configuration>

