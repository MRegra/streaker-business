<configuration scan="true" scanPeriod="30 seconds">

    <!-- ===== DEV PROFILE ===== -->
    <springProfile name="dev">

        <!-- Human-friendly console -->
        <appender name="CONSOLE_PRETTY" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n%ex</pattern>
            </encoder>
        </appender>

        <!-- Structured JSON to stdout (useful if you still scrape dev logs) -->
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp fieldName="timestamp"/>
                    <logLevel fieldName="level"/>
                    <threadName fieldName="thread"/>
                    <loggerName fieldName="logger"/>
                    <message/>
                    <mdc/>
                    <stackTrace fieldName="exception"/>
                </providers>
            </encoder>
        </appender>

        <root level="DEBUG">
            <appender-ref ref="CONSOLE_PRETTY"/>
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
    </springProfile>

    <!-- ===== PROD PROFILE ===== -->
    <springProfile name="prod">

        <!-- Structured JSON only to stdout (let Promtail/Fluent Bit ship it to Loki) -->
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp><fieldName>timestamp</fieldName></timestamp>
                    <logLevel><fieldName>level</fieldName></logLevel>
                    <threadName><fieldName>thread</fieldName></threadName>
                    <loggerName><fieldName>logger</fieldName></loggerName>
                    <message/>
                    <mdc/>
                    <stackTrace><fieldName>exception</fieldName></stackTrace>
                </providers>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
    </springProfile>

</configuration>
