{
    # Optional: global settings
    email marregsil97@gmail.com
    auto_https disable_redirects
    servers {
        protocols h1 h2 h2c
    }
}

# 🔒 Production domain (HTTPS enabled automatically)
streaker.com, www.streaker.com {

    # 📊 Proxy /grafana/*
    handle /grafana/* {
        reverse_proxy streaker-grafana:3000
    }

    # ⚙️ Proxy /api/*
    handle /api/* {
        reverse_proxy streaker-backend:8080
    }

    # 🌐 Serve Angular frontend for all other routes
    handle {
        root * /usr/share/caddy/browser
        try_files {path} /index.html
        file_server
        encode gzip
    }

    # 🛡 Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }
}

# 🌐 Localhost (HTTP only, no HTTPS)
http://localhost {

    # 📊 Proxy /grafana/*
    handle /grafana/* {
        reverse_proxy streaker-grafana:3000
    }

    # ⚙️ Proxy /api/*
    handle /api/* {
        reverse_proxy streaker-backend:8080
    }

    # 🌐 Serve Angular frontend for all other routes
    handle {
        root * /usr/share/caddy/browser
        try_files {path} /index.html
        file_server
        encode gzip
    }

    # 🛡 Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}
