{
    # Optional: global settings
    email marregsil97@gmail.com
    servers {
        protocols h1 h2 h2c
    }
}

# Explicit HTTP support for Lets Encrypt HTTP challenge
http://streakmastery.com, http://www.streakmastery.com {
    redir https://{host}{uri}
}

# 🔒 Production domain (HTTPS enabled automatically)
streakmastery.com, www.streakmastery.com {

    # ✅ Rate limit applied to all requests
    @rateLimited {
        rate_limit {
            zone global
            key {remote_ip}
            events 20
            window 1s
        }
    }

    handle @rateLimited {
        respond "Too Many Requests" 429
    }

    # 📊 Proxy /grafana/*
    handle_path /grafana/* {
        reverse_proxy streaker-grafana:3000
    }

    # ⚙️ Proxy /api/*
    handle /api/* {
        reverse_proxy streaker-backend:8080
    }

    # 🌐 Serve Angular frontend for all other routes
    handle {
        root * /usr/share/caddy/browser
        try_files {path} /index.html
        file_server
        encode gzip
    }

    # 🛡 Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }

    # 📄 Access Logging
    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 5
            roll_keep_for 48h
        }
        level info
    }
}

# 🌐 Localhost (HTTP only, no HTTPS)
http://localhost {

    # 📊 Proxy /grafana/*
    handle /grafana/* {
        reverse_proxy streaker-grafana:3000
    }

    # ⚙️ Proxy /api/*
    handle /api/* {
        reverse_proxy streaker-backend:8080
    }

    # 🌐 Serve Angular frontend for all other routes
    handle {
        root * /usr/share/caddy/browser
        try_files {path} /index.html
        file_server
        encode gzip
    }

    # 🛡 Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}
