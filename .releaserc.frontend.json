{
  "branches": ["main"],
  "tagFormat": "frontend-v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      { "changelogFile": "CHANGELOG_FRONTEND.md" }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./infra/scripts/.bump-version.sh ${nextRelease.version} frontend"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["VERSION_FRONTEND", "CHANGELOG_FRONTEND.md"],
        "message": "chore(frontend): release ${nextRelease.version} [skip ci]"
      }
    ]
  ],
  "ci": false
}
