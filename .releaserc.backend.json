{
  "branches": ["main"],
  "tagFormat": "backend-v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      { "changelogFile": "CHANGELOG.md" }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo 'Preparing backend version ${nextRelease.version}' && ./infra/scripts/.bump-version.sh ${nextRelease.version} backend"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["backend/pom.xml", "VERSION_BACKEND", "CHANGELOG.md"],
        "message": "chore(backend): release ${nextRelease.version} [skip ci]"
      }
    ]
  ],
  "ci": false
}
